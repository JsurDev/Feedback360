<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - HOTELES</title>
    <!-- Estilos de terceros por CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="..." crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.lineicons.com/5.0/lineicons.css" />
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

    @Styles.Render("~/Content/css")

    @*@Scripts.Render("~/bundles/modernizr")*@
    <style>
        .navbar-nav .dropdown:hover .dropdown-menu {
            display: block;
            margin-top: 0; /* evita que se separe del botón */
        }
        .logo {
            max-width: 250px; /* Ajusta el tamaño según sea necesario */
            margin-bottom: 0px; /* Espacio debajo del logo */
            margin-top: 0px;
        }
        #btnLogin.animar {
            transform: scale(1.2);
            background-color: #ffc107 !important; /* amarillo */
            transition: transform 0.3s ease, background-color 0.3s ease;
        }
        .dropdown-item.notificacion {
            font-size: 0.8rem;
            padding: 0.25rem 0.75rem;
        }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">
    @{
        var cliente = Session["Cliente"] as CapaEntidad.Cliente;
        var primerNombre = cliente?.Nombre?.Split(' ')[0];  //Mostramos el nombre de quien ha iniciado sesión
    }

   <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container px-4 px-lg-5">
            <a class="navbar-brand d-flex align-items-center" href="@Url.Action("Index", "Tienda")">
                <img src="~/Content/img/banner1.png" alt="Logo" class="logo">
            </a>
            <a class="navbar-brand" href="#"></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                    <li class="nav-item">

                    </li>
                </ul>
                <form class="d-flex gap-4">
                    @if (Session["Cliente"] == null)
                    {
                        <a id="btnLogin" class="btn btn-outline-info" aria-current="page" href="@Url.Action("Index","Acceso")">
                            <i class="fa-solid fa-arrow-right"></i>
                            Log In
                        </a>
                        <a id="btnCreate" class="btn btn-outline-info" aria-current="page" href="@Url.Action("Crear","Acceso")">
                            <i class="fa-solid fa-arrow-right"></i>
                            Registrarse
                        </a>
                    }
                    else
                    {
                        <a class="btn btn-outline-info d-flex align-items-center me-3" href="@Url.Action("MisCompras","Tienda")">
                            <i class="fa-solid fa-cart-flatbed-suitcase me-2"></i>
                            <span>Carrito</span>
                            <span class="badge text-bg-info text-white ms-2">0</span>
                        </a>

                        <ul class="navbar-nav ms-auto me-0 me-md-3 my-2 my-md-0">
                            <li class="nav-item dropdown">
                                <a class="btn btn-outline-danger position-relative">
                                    <i class="fa-solid fa-bell me-1"></i>
                                    <span></span>
                                    <span id="badgeNotificaciones" class="badge text-bg-danger text-white ms-2">0</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" href="#"><b>Notificaciones</b></a></li>
                                    <li><hr class="dropdown-divider" /></li>

                                    <!-- Aquí se mostrarán las notificaciones -->
                                    <li id="listaNotificaciones"></li>

                                    <li><hr class="dropdown-divider" /></li>
                                    <li><a class="dropdown-item text-center" href="@Url.Action("Notificaciones", "Tienda")">Ver todas</a></li>
                                </ul>

                            </li>
                        </ul>

                        <ul class="navbar-nav ms-auto me-0 me-md-3 my-2 my-md-0">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user fa-fw"></i> @primerNombre
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" href="#!"><b>@User.Identity.Name</b></a></li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li><a class="dropdown-item" href="@Url.Action("MisCompras","Tienda")">Reservaciones</a></li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li><a class="dropdown-item" href="@Url.Action("QuejaSugerencia","Tienda")">Reclamar</a></li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li><a class="dropdown-item" href="@Url.Action("LogOut","Acceso")">Salir</a></li>
                                </ul>
                            </li>
                        </ul>
                    }
                </form>

            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - AI Developers</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")

    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

    <!-- Incluye SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/gasparesganga-jquery-loading-overlay@2.1.7/dist/loadingoverlay.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/i18n/datepicker-es.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            obtenerNotificaciones();
            setInterval(obtenerNotificaciones, 5000); // cada 5 segundos

            function obtenerNotificaciones() {
                $.ajax({
                    url: '@Url.Action("ListarNotificaciones", "Tienda")',
                    method: 'GET',
                    success: function (response) {
                        const notificaciones = response.data;

                        // Actualizar badge de cantidad
                        $('#badgeNotificaciones').text(notificaciones.length);

                        // Limpiar lista de notificaciones
                        let $lista = $('#listaNotificaciones');
                        $lista.empty();

                        // Obtener las 2 más recientes
                        const ultimasDos = notificaciones
                            .sort((a, b) => new Date(b.Fecha) - new Date(a.Fecha))
                            .slice(0, 2);

                        if (ultimasDos.length === 0) {
                            $lista.append('<li><a class="dropdown-item text-muted" href="#">Sin notificaciones</a></li>');
                        } else {
                            ultimasDos.forEach(n => {
                                $lista.append(`
                                <li>
                                    <a class="dropdown-item notificacion" href="#" data-id="${n.IdNotificacion}" style="white-space: normal;">
                                        <div><strong>${n.Mensaje}</strong></div>
                                        <div><small class="text-muted">${new Date(n.Fecha.replace(" ", "T")).toLocaleString()}</small></div>
                                    </a>
                                </li>
                            `);
                            });        
                            $('.notificacion').off('click').on('click', function (e) {
                                e.preventDefault();                            
                                const $item = $(this).closest('li'); // referencia al <li> para eliminarlo
                                const id = $(this).data('id');                            
                                $.ajax({
                                    url: '@Url.Action("MarcarNotificacionLeida", "Tienda")',
                                    method: 'POST',
                                    data: { idNotificacion: id },
                                    success: function (response) {
                                        if (response.success) {
                                            $item.remove(); // elimina la notificación del panel inmediatamente
                                            // Actualiza el badge de número de notificaciones
                                            let count = parseInt($('#badgeNotificaciones').text());
                                            $('#badgeNotificaciones').text(Math.max(0, count - 1));
                                        } else {
                                            console.error("No se pudo marcar como leída");
                                        }
                                    },
                                    error: function (error) {
                                        console.error('Error al marcar como leída', error);
                                    }
                                });
                            });
                        }
                    },
                    error: function (error) {
                        console.error('Error al obtener notificaciones', error);
                    }
                });
            }
        });
    </script>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
