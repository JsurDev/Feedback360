@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registrarse</title>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            background: #f8f9fa;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .login-card {
            background: #fff;
            border-radius: 16px;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
            padding: 40px 30px;
            width: 100%;
            max-width: 400px;
        }

            .login-card .form-control {
                border-radius: 8px;
            }

            .login-card h2 {
                font-weight: bold;
            }

        .icon-input {
            position: relative;
        }

            .icon-input i {
                position: absolute;
                top: 50%;
                left: 12px;
                transform: translateY(-50%);
                color: #6c757d;
            }

            .icon-input input {
                padding-left: 36px;
            }

        .alert-soft-green {
            background-color: #d4edda;
            color: #155724;
            border-color: #c3e6cb;
            text-align: center;
            display: inline-flex;
            justify-content: center;
            align-items: center;
            padding: 0.5rem 1rem;
            font-size: 0.9rem;
            border-radius: 0.5rem;
            max-width: 300px;
            margin: 0 auto;
        }

        .alert-container {
            position: absolute;
            top: 20px;
            left: 50%;
            transform: translateX(-50%);
            z-index: 999;
        }
        .login-card .form-control:focus {
            box-shadow: 0 0 0 0.15rem rgba(25, 135, 84, 0.25);
            border-color: #198754;
            transition: 0.2s;
        }

        button.btn-success:hover {
            background-color: #157347;
            transition: background-color 0.2s ease-in-out;
        }
        input::placeholder {
            color: #adb5bd;
            font-style: italic;
        }
        .icon-input:focus-within i {
            color: #198754;
            transition: color 0.3s ease;
        }
    </style>
</head>
<body>
    <div class="login-card">
        <h4 class="text-center mb-2">Registrate</h4>

        <form action="@Url.Action("RegistrarCliente","Acceso")" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-2 icon-input">
                <i class="fa fa-pencil" aria-hidden="true"></i>
                <label asp-for="Nombre" class="form-label">Nombre</label>
                <input type="text" name="Nombre" class="form-control input_user" placeholder="Nombre" required/>
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="mb-2 icon-input">
                <i class="fa fa-pencil" aria-hidden="true"></i>
                <label asp-for="Apellido" class="form-label">Apellido</label>
                <input type="text" name="Apellido" class="form-control input_user" placeholder="Apellido" required/>
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>

            <div class="mb-2 icon-input">
                <i class="fas fa-phone"></i>
                <label asp-for="Telefono" class="form-label">Teléfono</label>
                <input type="text" name="Telefono" class="form-control input_user" placeholder="Teléfono" required/>
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>

            <div class="mb-2 icon-input">
                <i class="fas fa-envelope"></i>
                <label asp-for="Email" class="form-label">Correo Electrónico</label>
                <input type="text" name="Email" class="form-control input_user" placeholder="Correo" required/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-2 icon-input">
                <i class="fas fa-lock"></i>
                <label asp-for="Contrasena" class="form-label">Contraseña</label>
                <input type="password" name="Password" class="form-control input_user" placeholder="Contraseña" required/>
                <span asp-validation-for="Contrasena" class="text-danger"></span>
            </div>

            <div class="mb-2 icon-input">
                <i class="fas fa-lock"></i>
                <label asp-for="ConfirmarPassword" class="form-label">Confirmar Contraseña</label>
                <input type="password" name="ConfirmarPassword" class="form-control input_user" placeholder="Confirmar Contraseña" required/>
                <span asp-validation-for="ConfirmarPassword" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-3">
                <a asp-controller="Account" asp-action="VerifyEmail"
                   class="text-decoration-none small"
                   href="@Url.Action("Index","Tienda")">
                    Regresar
                </a>
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="alert-container">
                    <div class="alert alert-soft-green text-center fade show" id="customToast" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        @ViewBag.Error
                        <i class="fas fa-exclamation-circle ms-2"></i>
                    </div>
                </div>
            }

            <button type="submit" class="btn btn-success w-100">Registrarse</button>
        </form>
    </div>

    <script>
        // Esto desaparecerá la alerta después de 3 segundos
        window.setTimeout(function () {
            var alertElement = document.getElementById("customToast");
            if (alertElement) {
                alertElement.classList.remove("show");
                alertElement.classList.add("fade");
            }
        }, 3000);


    </script>
</body>
</html>
