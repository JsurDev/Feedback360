@model List<CapaEntidad.Room>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .home_banner_area {
        background: transparent; /* Fondo transparente */
        color: #33acff; /* Azul oscuro profesional */
        padding: 250px 0;
    }
    .home_banner_area_Producto {
        background: transparent; /* Fondo transparente */
        color: #33acff; /* Azul oscuro profesional */
        padding: 10px 5px;
    }
    .banner_inner {
        min-height: 50px;
    }
    .sub {
        font-size: 25px; /* más pequeño */
        letter-spacing: 1px;
        color: #17a2b8; /* Azul info */
        font-weight: 600;
    }
    .banner_content h3 {
        font-size: 30px; /* reducido desde 48px */
        line-height: 1.3;
        font-weight: 500;
        margin-top: 10px;
    }
        .banner_content h3 span {
            color: #28a745; /* Verde success */
        }
    .main_btn {
        display: inline-block;
        background-color: #17a2b8; /* Azul info */
        color: #fff;
        padding: 8px 16px;
        border-radius: 30px;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s ease-in-out;
        font-size: 20px;
        margin-top: 10px; /* agregado para reducir espacio */
    }
        .main_btn:hover {
            background-color: #138496;
            color: #fff;
            transform: scale(1.05);
        }
    .carousel-inner img {
        max-height: 500px;
        object-fit: cover;
    }
    .carousel-control-prev-icon,
    .carousel-control-next-icon {
        filter: invert(100%);
    }
    #espacio {
        margin-bottom: 200px; /* Puedes ajustar este valor según el espacio que desees */
    }
    #espacioProductos {
        margin-bottom: 10px; /* Puedes ajustar este valor según el espacio que desees */
        margin-top: 10px;
    }
    .styled-hr {
        border: none;
        height: 4px;
        background: linear-gradient(to right, #17a2b8, #28a745);
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
        border-radius: 4px;
        margin: 40px auto; /* Centra horizontalmente */
        width: 80%;
    }
    .single-product:hover {
        transform: scale(1.02);
        box-shadow: 0 8px 20px rgba(0,0,0,0.15);
        transition: all 0.3s ease-in-out;
    }
    body {
        background-image: url('/Content/img/fondo.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed; /* Para efecto de fondo fijo */
        min-height: 100vh; /* Asegura que cubra el alto de la ventana */
    }

</style>

<section class="home_banner_area mb-40">
    <div class="banner_inner d-flex align-items-center">
        <div class="container">
            <div class="banner_content row">
                <div class="col-lg-12 text-center">
                    <p class="sub text-uppercase">Nuestros Servicios</p>
                    <h2><span>Vive</span> la <br />Experiencia <span>Gardens</span><br /><span>Hotel</span></h2>
                    <a class="main_btn mt-30" href="#servicios">Ver Servicios</a>
                </div>
            </div>
        </div>
    </div>
</section>

<div id="espacio" class="carousel slide" data-ride="carousel">
    @*<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">*@

    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/Content/img/bodas.jpg" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Content/img/eventos-banner.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Content/img/spa-banner.jpg" alt="Third slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Content/img/sheraton2.jpg" alt="Third slide">
        </div>
    </div>
    @*<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">*@
    <a class="carousel-control-prev" href="#espacio" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    @*<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">*@
    <a class="carousel-control-next" href="#espacio" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<!--================ Sección de Servicios =================-->
<section id="servicios" class="feature_product_area section_gap_bottom_custom">
    <!-- Sección de productos con estilo aplicado -->
    <section class="home_banner_area_Producto" id="espacioProductos">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-12">
                    <div class="main_title text-center banner_content">
                        <h2><span>Productos</span></h2>
                        <p class="sub">Descubre nuestros productos seleccionados especialmente para ti</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <hr class="styled-hr" />
    <div class="container">
        <div class="row">
            @foreach (var room in Model)
            {

                <div class="col-lg-4 col-md-6">
                    <div class="single-product">
                        <div class="product-img">
                            <img class="img-fluid w-100" src="@Url.Content("~/Content/img/" + room.ImagenUrl)" alt="@room.Nombre"/>
                            <div class="p_icon d-flex justify-content-center mt-3">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <form method="post" action="">
                                        <input type="hidden" name="productoId" value="@room.IdRoom" />
                                        <button type="submit" class="btn btn-secondary btn-block">
                                            <i class="ti-shopping-cart"></i> Agregar al carrito
                                        </button>
                                    </form>
                                }
                            </div>
                        </div>
                        <div class="product-btm">
                            <a href="#" class="d-block">
                                <h4 class="text-center text-success">@room.Nombre</h4>
                            </a>
                            <div class="mt-3">
                                <span class="mr-4">$@room.Precio.ToString("F2")</span>
                                <del>$35.00</del> <!-- Puedes manejar el precio original también -->
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        </div>


    </section>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

<script>
    $(document).ready(function () {
        $('.carousel').carousel({
            interval: 1800
        });
    });

    $(document).ready(function () {
        $('.product-img img').on('click', function () {
            var $btn = $('#btnLogin');

            if ($btn.length > 0) {
                $btn.addClass('animar');

                setTimeout(function () {
                    $btn.removeClass('animar');
                }, 2000);
            }
        });
    });
</script>
