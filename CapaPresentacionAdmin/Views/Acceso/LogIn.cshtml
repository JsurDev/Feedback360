@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Iniciar Sesión</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            background: #f8f9fa;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
        .login-card {
            background: #fff;
            border-radius: 16px;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
            padding: 40px 30px;
            width: 100%;
            max-width: 400px;
        }
            .login-card .form-control {
                border-radius: 8px;
            }
            .login-card h2 {
                font-weight: bold;
            }
        .icon-input {
            position: relative;
        }
            .icon-input i {
                position: absolute;
                top: 50%;
                left: 12px;
                transform: translateY(-50%);
                color: #6c757d;
            }

            .icon-input input {
                padding-left: 36px;
            }
        .alert-soft-green {
            background-color: #d4edda;
            color: #155724;
            border-color: #c3e6cb;
            text-align: center;
            display: inline-flex;
            justify-content: center;
            align-items: center;
            padding: 0.5rem 1rem;
            font-size: 0.9rem;
            border-radius: 0.5rem;
            max-width: 300px;
            margin: 0 auto;
        }
        .alert-container {
            position: absolute;
            top: 20px;
            left: 50%;
            transform: translateX(-50%);
            z-index: 999;
        }
        .icon-input:focus-within i {
            color: #198754;
            transition: color 0.3s ease;
        }
    </style>
</head>
<body>
    <div class="login-card">
        <h4 class="text-center mb-1">FEEDBACK360</h4>
        <h3 class="text-center mb-4">Iniciar Sesión</h3>
        @*Esto es la ALERTA*@
        <form action="@Url.Action("LogIn","Acceso")" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3 icon-input">
                <i class="fas fa-envelope"></i>
                <label asp-for="Email" class="form-label">Correo Electrónico</label>
                <input name="email"
                       class="form-control"
                       placeholder="usuario@ejemplo.com"
                       required
                       value="@ViewBag.Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3 icon-input">
                <i class="fas fa-lock"></i>
                <label asp-for="Contrasena" class="form-label">Contraseña</label>
                <input asp-for="Contrasena" name="contrasena" type="password" class="form-control" placeholder="********" required />
                <span asp-validation-for="Contrasena" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-3">
                <a asp-controller="Account" asp-action="VerifyEmail"
                   class="text-decoration-none small"
                   href="@Url.Action("RestablecerPassword","Acceso")">
                    ¿Olvidaste tu contraseña?
                </a>
                <a href="@Url.Action("HotelesServicios","Acceso")" class="text-decoration-none small">
                    Ver Hoteles
                </a> @*aqui accesamos a los hoteles a los cuales les brindamos el servicio*@
            </div>

            @{
                if (ViewBag.Error != null)
                {
                    <div class="alert-container">
                        <div class="alert alert-soft-green text-center fade show" id="customToast" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            @ViewBag.Error
                            <i class="fas fa-exclamation-circle me-2"></i>
                        </div>
                    </div>

                }
            }

            <button type="submit" class="btn btn-success w-100">Ingresar</button>
        </form>
    </div>
    <script>
        // Esto desaparecerá la alerta después de 3 segundos
        window.setTimeout(function () {
            var alertElement = document.getElementById("customToast");
            if (alertElement) {
                alertElement.classList.remove("show"); // Oculta la alerta
                alertElement.classList.add("fade");    // Asegura que se desvaneciera
            }
        }, 3000); // 3000 milisegundos = 3 segundos
    </script>
</body>

</html>
