@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Restablecer Contraseña</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            background: #f8f9fa;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .card-reset {
            background: #fff;
            border-radius: 16px;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
            padding: 40px 30px;
            width: 100%;
            max-width: 400px;
        }

            .card-reset h2 {
                font-weight: bold;
            }

        .icon-input {
            position: relative;
        }

            .icon-input i {
                position: absolute;
                top: 50%;
                left: 12px;
                transform: translateY(-50%);
                color: #6c757d;
            }

            .icon-input input {
                padding-left: 36px;
            }

        .alert-soft-blue {
            background-color: #d1ecf1;
            color: #0c5460;
            border-color: #bee5eb;
            text-align: center;
            border-radius: 0.5rem;
            padding: 0.5rem 1rem;
            font-size: 0.9rem;
            margin-bottom: 1rem;
        }
    </style>
</head>
<body>
    <div class="card-reset">
        <div class="text-center mb-3">
            <i class="fas fa-key fa-3x text-success"></i>
        </div>
        <h2 class="text-center mb-4">Restablecer Contraseña</h2>

        @* Mensaje si el email fue enviado correctamente *@
        @if (ViewBag.Mensaje != null)
        {
            <div class="alert alert-soft-blue" role="alert">
                <i class="fas fa-info-circle me-2"></i>
                @ViewBag.Mensaje
            </div>
        }

        <form asp-action="EnviarLinkRestablecimiento" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3 icon-input">
                <i class="fas fa-envelope"></i>
                <label asp-for="Email" class="form-label">Correo electrónico</label>
                <input asp-for="Email" class="form-control" placeholder="usuario@ejemplo.com" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success w-100">Enviar enlace</button>

            <div class="mt-3 text-center">
                <a href="@Url.Action("LogIn", "Acceso")" class="text-decoration-none small">
                    <i class="fas fa-arrow-left"></i> Volver al inicio de sesión
                </a>
            </div>
        </form>
    </div>
</body>
</html>
