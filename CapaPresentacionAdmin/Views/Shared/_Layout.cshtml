                        }


                        <div class="sb-sidenav-menu-heading">Categoria</div>
                        @*Esto es una Vista para TODOS*@
                        <a class="nav-link" href="@Url.Action("Solicitudes","Mantenimientos")">
                            <div class="sb-nav-link-icon"> <i class="fa-solid fa-gavel"></i> </div>
